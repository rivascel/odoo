<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


            <!-- Acción -->
        <record id="action_mail_register" model="ir.actions.act_window">
            <field name="name">Registro</field>
            <field name="res_model">correspondencia.correspondencia</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- Menú principal -->
        <menuitem 
            id="menu_correspondencia_root" 
            name="Correspondencia" 
            sequence="0"
            
        />

        <!-- Submenú -->
        <menuitem 
            id="registro_level1" 
            name="registro" 
            parent="menu_correspondencia_root" 
            sequence="20"
            action="action_mail_register"
        />




        <!-- Vista Tree -->
        <record id="correo_tree" model="ir.ui.view" >
            <field name="name">tree.register</field>
            <field name="model">correspondencia.correspondencia</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="destination"/>
                    <field name="sender"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form -->
        <record id="correo_form" model="ir.ui.view">
            <field name="name">form.register</field>
            <field name="model">correspondencia.correspondencia</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="id"/>
                            <field name="responsible"/>
                            <field name="origin"/>
                            <field name="destination"/>
                            <field name="document_type"/>
                            <field name="codeBar_type"/>
                            <field name="date"/>
                            <field name="number_sheets"/>
                            <field name="sender"/>
                            <field name="name_sender"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="finalLocation"/>
                            <field name="attachment"/>
                            <field name="tracking"/> 
                        </group>
                       

                    </sheet>
                </form>
            </field>
        </record>

    
    </data>
</odoo>